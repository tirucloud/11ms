pipeline {
    agent any 

    stages {
        stage('Cleaning Workspace') {
            steps {
                cleanWs()
            }
        }
        stage('Checkout from Git') {
            steps {
                git branch: 'main', url: 'https://github.com/tirucloud/11ms.git'
            }
        }
        stage("Docker Image Build") {
            steps {
                script {
                    dir('src/paymentservice') {
                        sh 'docker system prune -f'
                        sh 'docker container prune -f'
                        sh 'docker build -t paymentservice .'
                    }
                }
            }
        }
        stage("ECR Image Pushing") {
            steps {
                script {
                    sh '''
                    #Retrieve an authentication token and authenticate your Docker client to your registry. Use the AWS CLI:
                    aws ecr get-login-password --region us-east-1 | docker login --username AWS --password-stdin 915951599902.dkr.ecr.us-east-1.amazonaws.com

                    #After the build completes, tag your image so you can push the image to this repository:
                    docker tag paymentservice:latest 915951599902.dkr.ecr.us-east-1.amazonaws.com/paymentservice:${BUILD_NUMBER}

                    #Run the following command to push this image to your newly created AWS repository:
                    docker push 915951599902.dkr.ecr.us-east-1.amazonaws.com/paymentservice:${BUILD_NUMBER}
                    '''
                }
            }
        }
        stage('Update Deployment file') {
            environment {
                GIT_REPO_NAME = "11ms"
                GIT_EMAIL = "tirucloud@gmail.com"
                GIT_USER_NAME = "tirucloud"
                IMAGE_NAME = "paymentservice"
                REPO_URL = "915951599902.dkr.ecr.us-east-1.amazonaws.com/paymentservice"
                YAML_FILE = "paymentservice.yaml"
            }
            steps {
                dir('kubernetes-files') {
                    withCredentials([string(credentialsId: 'my-git-pattoken', variable: 'git_token')]) {
                        sh '''
                            git config user.email "${GIT_EMAIL}"
                            git config user.name "${GIT_USER_NAME}"
                            BUILD_NUMBER=${BUILD_NUMBER}
                            echo $BUILD_NUMBER

                            # push this image to your git hub
                            sed -i "s#image:.*#image: ${REPO_URL}:$BUILD_NUMBER#g" ${YAML_FILE}
                            git add .
                            git commit -m "Update ${IMAGE_NAME} Image to version \${BUILD_NUMBER}"
                            git push https://${git_token}@github.com/${GIT_USER_NAME}/${GIT_REPO_NAME} HEAD:main
        
                        '''
                    }
                }
            }
        }
    }
}
